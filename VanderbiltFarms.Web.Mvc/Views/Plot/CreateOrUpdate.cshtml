@using VanderbiltFarms.Shared.ViewModel
@model PlotVM

@{
    ViewData["Title"] = "Plot Create/Edit";
}

@if (@Model is null)
{
    <h1>Create</h1>
}
else
{
    <h1>Edit</h1>
}

<h4>Plot</h4>
<hr />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-controller="Plot" asp-action="CreateOrUpdate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlotID" />
            @*<input type="hidden" asp-for="HomeownerID" />*@

            <div class="form-group">
                <label asp-for="HomeownerName" class="control-label"></label>
                @Html.DropDownListFor(x => x.HomeownerID, new SelectList(ViewBag.Homeowners, "HomeownerId", "FullName"), "No Owner", new { @class="form-control"})
            </div>

            <div class="form-group">
                <label asp-for="StreetNumber" class="control-label"></label>
                <input type="text" asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label"></label>
                <input type="text" asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfBedrooms" class="control-label"></label>
                <input type="text" asp-for="NumberOfBedrooms" class="form-control" />
                <span asp-validation-for="NumberOfBedrooms" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfBathrooms" class="control-label"></label>
                <input type="text" asp-for="NumberOfBathrooms" class="form-control" />
                <span asp-validation-for="NumberOfBathrooms" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="PlotSize" class="control-label"></label>
                <input type="text" asp-for="PlotSize" class="form-control" />
                <span asp-validation-for="PlotSize" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="SquareFeet" class="control-label"></label>
                <input type="text" asp-for="SquareFeet" class="form-control" />
                <span asp-validation-for="SquareFeet" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>

            <div class="mt-3 form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Table</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}