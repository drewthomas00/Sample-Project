@using VanderbiltFarms.Shared.ViewModel
@model TransactionVM

@{
    ViewData["Title"] = "Add Transaction";
}

<h1>Pay Fee</h1>

<h4>Transaction</h4>
<hr />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-controller="Fee" asp-action="Pay" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeeID" />

            <div class="form-group">
                <label asp-for="PaidAmt" class="control-label"></label>
                <input type="text" asp-for="PaidAmt" class="form-control" />
                <span asp-validation-for="PaidAmt" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input type="text" asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>

            <div class="mt-3 form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="FeeDetails" asp-controller="Plot" asp-route-id="@ViewBag.PlotId">Back to Table</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}