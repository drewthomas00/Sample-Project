@using VanderbiltFarms.Shared.ViewModel
@model FeeVM

@{
    ViewData["Title"] = "Plot Create/Edit";
}

@if (@Model is null)
{
    <h1>Create</h1>
}
else
{
    <h1>Edit</h1>
}

<h4>Plot</h4>
<hr />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-controller="Fee" asp-action="CreateOrUpdate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeeID" />
            <input type="hidden" asp-for="PlotID" />

            <div class="form-group">
                <label asp-for="FeeDesc" class="control-label"></label>
                <input type="text" asp-for="FeeDesc" class="form-control" />
                <span asp-validation-for="FeeDesc" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="FeeAmt" class="control-label"></label>
                <input type="text" asp-for="FeeAmt" class="form-control" />
                <span asp-validation-for="FeeAmt" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input type="text" asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger" />
            </div>

            <div class="mt-3 form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="FeeDetails" asp-controller="Plot" asp-route-id="@Model.PlotID">Back to Table</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}