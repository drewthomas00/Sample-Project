@using VanderbiltFarms.Shared.ViewModel
@model List<HomeownerVM>

@{
    ViewData["Title"] = "Homeowner";
}

<h3 class="text-center">Homeowner Manager</h3>

<form asp-controller="Homeowner" asp-action="Search" method="get">
    <div class="mt-5 mb-5">
        <input class="form-control" type="text" placeholder="Search" name="searchString" aria-label="Search" />
    </div>
</form>

<div class="mt-3 mb-3">
    <a asp-controller="Homeowner" asp-action="CreateOrUpdate" class="btn btn-primary">New Homeowner</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                @Html.DisplayNameForInnerType((HomeownerVM homeowner) => homeowner.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((HomeownerVM homeowner) => homeowner.Birthday)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((HomeownerVM homeowner) => homeowner.Phone)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((HomeownerVM homeowner) => homeowner.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var homeowner in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => homeowner.Name)</td>
                    <td>@Html.DisplayFor(model => homeowner.Birthday)</td>
                    <td>@Html.DisplayFor(model => homeowner.Phone)</td>
                    <td>@Html.DisplayFor(model => homeowner.Email)</td>
                    <td>
                        <a asp-controller="Homeowner" asp-action="CreateOrUpdate" asp-route-id="@homeowner.HomeownerID">Edit</a> |
                        <a asp-controller="Homeowner" asp-action="Delete" asp-route-id="@homeowner.HomeownerID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No Homeowners Found.</td>
            </tr>
        }
    </tbody>
</table>