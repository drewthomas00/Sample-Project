@using VanderbiltFarms.Shared.ViewModel
@model List<PlotVM>

@{
    ViewData["Title"] = "Plot";
}

<h3 class="text-center">Plot Manager</h3>
<hr />

<div class="mt-3 mb-3">
    <a asp-controller="Plot" asp-action="CreateOrUpdate" class="btn btn-primary">New Plot</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                @Html.DisplayNameForInnerType((PlotVM plot) => plot.HomeownerName)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((PlotVM plot) => plot.FullAddress)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((PlotVM plot) => plot.SquareFeet)
            </th>
            <th scope="col">
                @Html.DisplayNameForInnerType((PlotVM plot) => plot.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var plot in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => plot.HomeownerName)</td>
                    <td>@Html.DisplayFor(model => plot.FullAddress)</td>
                    <td>@Html.DisplayFor(model => plot.SquareFeet)</td>
                    <td>@Html.DisplayFor(model => plot.Description)</td>
                    <td>
                        <a asp-controller="Plot" asp-action="FeeDetails" asp-route-id="@plot.PlotID">Fees</a> |
                        <a asp-controller="Plot" asp-action="Details" asp-route-id="@plot.PlotID">Details</a> |
                        <a asp-controller="Plot" asp-action="CreateOrUpdate" asp-route-id="@plot.PlotID">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No Plots Found.</td>
            </tr>
        }
    </tbody>
</table>